{
  "name": "jobs-startup",
  "version": "1.0.0",
  "description": "Fullstack приложение для поиска вакансий",
  "private": true,
  "scripts": {
    "install": "powershell -ExecutionPolicy Bypass -File ./scripts/install.ps1",
    "dev": "powershell -ExecutionPolicy Bypass -File ./scripts/dev.ps1",
    "dev:no-browser": "set NO_BROWSER=true && powershell -ExecutionPolicy Bypass -File ./scripts/dev.ps1",
    "clean": "powershell -ExecutionPolicy Bypass -File ./scripts/clean.ps1",
    "build:client": "npm run build --prefix client",
    "build:parser": "npm run build --prefix parser",
    "build:all": "npm run build:parser && npm run build:client",
    "start:prod": "docker-compose -f docker-compose.prod.yml up --build -d",
    "stop:prod": "docker-compose -f docker-compose.prod.yml down",
    "logs:prod": "docker-compose -f docker-compose.prod.yml logs -f"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
